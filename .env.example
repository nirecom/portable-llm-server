# ============================================================
# portable-llm-server environment variables
# Copy to .env and fill in actual values
# ============================================================

# Path to GGUF model file
# Example: ~/.cache/lm-studio/models/lmstudio-community/Qwen2.5-7B-Instruct-GGUF/Qwen2.5-7B-Instruct-Q4_K_M.gguf
MODEL_PATH=

# Server settings
HOST=0.0.0.0
PORT=8443

# TLS certificate files (generated by ./setup-certs.sh)
SSL_CERT_FILE=./certs/llm-server.pem
SSL_KEY_FILE=./certs/llm-server-key.pem

# GPU layers (-1 = all layers offloaded to GPU)
GPU_LAYERS=-1
